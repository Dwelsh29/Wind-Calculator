  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Wind Component Calculator</title>
  <style>
    body {
      margin: 0;
      background-color: #0a1b2a;
      color: #ffffff;
      font-family: 'Helvetica Neue', sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      overflow: hidden;
    }

    h2 {
      margin-bottom: 20px;
      font-size: 24px;
    }

    .input-group {
      margin-bottom: 15px;
      text-align: center;
    }

    label {
      display: block;
      font-size: 18px;
      margin-bottom: 5px;
    }

    input {
      padding: 10px;
      font-size: 18px;
      width: 120px;
      text-align: center;
      border: none;
      border-radius: 4px;
    }

    .result {
      margin-top: 20px;
      font-size: 22px;
      text-align: center;
      white-space: pre-line;
    }
  </style>
</head>
<body>
  <h2>Wind Component</h2>

  <div class="input-group">
    <label for="runway">Runway Heading (°)</label>
    <input type="number" id="runway" oninput="calculate()" />
  </div>

  <div class="input-group">
    <label for="windDir">Wind Direction (°)</label>
    <input type="number" id="windDir" oninput="calculate()" />
  </div>

  <div class="input-group">
    <label for="windSpeed">Wind Speed (KT)</label>
    <input type="number" id="windSpeed" oninput="calculate()" />
  </div>

  <div class="result" id="output">
    Enter values above
  </div>

  <script>
    function calculate() {
      const rw = parseFloat(document.getElementById('runway').value);
      const wd = parseFloat(document.getElementById('windDir').value);
      const ws = parseFloat(document.getElementById('windSpeed').value);
      const output = document.getElementById('output');

      if (isNaN(rw) || isNaN(wd) || isNaN(ws)) {
        output.textContent = 'Enter values above';
        return;
      }

      let angle = wd - rw;
      angle = (angle + 360) % 360;
      if (angle > 180) angle -= 360;

      const radians = angle * (Math.PI / 180);
      const headwind = Math.round(ws * Math.cos(radians));
      const crosswind = Math.round(ws * Math.sin(radians));

      output.textContent =
        `Headwind: ${Math.abs(headwind)} KT ${headwind >= 0 ? '(Headwind)' : '(Tailwind)'}\n` +
        `Crosswind: ${Math.abs(crosswind)} KT ${crosswind >= 0 ? '(From Right)' : '(From Left)'}`;
    }
  </script>
</body>
</html>
